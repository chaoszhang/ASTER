{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++ build active file",
        "command": "/usr/bin/g++",
        "args":  ["-std=gnu++11", "-g", "${file}", "-o", "${fileDirname}/../bin/${fileBasenameNoExtension}"],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": "build",
        "detail": "Task generated by Debugger."
      }
    ]
  }